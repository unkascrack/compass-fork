<!DOCTYPE compass-core-mapping PUBLIC
        "-//Compass/Compass Core Mapping DTD 2.3//EN"
        "http://www.compass-project.org/dtd/compass-core-mapping-2.3.dtd">

<compass-core-mapping package="org.compass.core.test.formatter.locale">

    <class name="A" alias="a">

        <id name="id" accessor="field"/>

        <property name="value" accessor="field">
            <meta-data format="00.00">value</meta-data>
        </property>

        <property name="date" accessor="field">
            <meta-data format="yyyy-MM-dd">date</meta-data>
        </property>
    </class>

</compass-core-mapping>
    
