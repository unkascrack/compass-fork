<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.compass.gps.device.hibernate.cascade.many">

    <class name="org.compass.gps.device.hibernate.cascade.many.User" table="user">
        <id name="id">
            <generator class="native"/>
        </id>
        <property name="version" optimistic-lock="true"/>
        <property name="name"/>
        <set name="albums" cascade="all">
            <key column="user_id"/>
            <one-to-many class="org.compass.gps.device.hibernate.cascade.many.Album"/>
        </set>
    </class>

</hibernate-mapping>