<compass-core-mapping package="org.compass.core.test.dynamic.ognl">

    <class name="A" alias="a1">

        <id name="id"/>

        <dynamic-meta-data name="test" converter="ognl">
            value + value2
        </dynamic-meta-data>
        <dynamic-meta-data name="test1" converter="ognl">
            value
        </dynamic-meta-data>
    </class>

    <class name="A" alias="a2">

        <id name="id"/>

        <dynamic-meta-data name="test" converter="ognl" format="yyyy" type="java.util.Date">
            date
        </dynamic-meta-data>
    </class>
</compass-core-mapping>
