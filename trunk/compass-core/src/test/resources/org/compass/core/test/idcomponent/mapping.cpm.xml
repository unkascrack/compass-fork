<compass-core-mapping package="org.compass.core.test.idcomponent">

    <class name="A" alias="a">

        <id-component name="b" accessor="field" />

        <property name="value" accessor="field">
            <meta-data>mvalue</meta-data>
        </property>
    </class>

    <class name="B" alias="b" root="false">
        <id name="id1" accessor="field" />
